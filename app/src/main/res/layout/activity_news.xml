<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/news_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:backgroundTint="@color/dark_gray" />

        <TextView
            android:id="@+id/news_top_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Game News"
            android:textColor="@color/dark_gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/news_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_back_btn"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/oswald_medium"
            android:lineSpacingExtra="-10sp"
            android:text="Sample headline this is a sample headline for a news"
            android:textAllCaps="true"
            android:textColor="@color/light_gray"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/news_author_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_title_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:text="Author"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/news_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_title_txt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:text="04/11/1999"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/news_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_author_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:text="Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames."
            android:textColor="@color/gray_accent"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/news_activity_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/news_header_txt"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vlr_news_first_img" />

        <TextView
            android:id="@+id/news_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_activity_img"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. \n\nLorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames.Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames.Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. \n\nLorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames. Lorem ipsum dolor sit ames tis rolod sema. Lorem ipsum dolor sit ames."
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />
    </RelativeLayout>
</ScrollView>