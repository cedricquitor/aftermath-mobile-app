<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/secondary_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/first_team_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/test_icon" />

            <ImageView
                android:id="@+id/second_team_img"
                android:src="@drawable/test_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/first_team_img"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/first_team_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/first_team_img"
                android:padding="8dp"
                android:text="First Team"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/first_team_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/second_team_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/second_team_img"
                android:layout_below="@id/first_team_txt"
                android:padding="8dp"
                android:text="Second Team"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/second_team_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_team_txt"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:text="16"
                android:textColor="@color/dark_gray" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>